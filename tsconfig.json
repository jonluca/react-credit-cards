{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "jsx": "react-jsx",
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "module": "esnext",
    "moduleResolution": "node16",
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist/mjs",
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2020"
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
